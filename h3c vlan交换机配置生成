#include <stdio.h>

int main()
{
	int i,j,k; //----i:vlan；j：vlan；k：内部循环控制几口一个vlan
	int vlan,acc,qishi,jieshu,jikou;   //----qishi:起始vlan id;jieshu:结束vlan id；jikou:vlan数量
	loop:
	printf("欢迎使用H3C交换机vlan配置生成器!\n请注意，access口的数量必须是vlan数量的整数倍！！！\n请输入起始vlan id，结束vlan id，并用空格分开，回车确认\n");
	scanf("%d %d",&qishi,&jieshu);
	printf("请输入您想让几个口使用一个相同的vlan id，回车确认\n");
	scanf("%d",&jikou);
	printf("请输入\"要使用到的vlan交换机access接口数量\",回车确认\n");
	scanf("%d",&acc);
	vlan = jieshu - qishi + 1;
	if(acc % vlan == 0)
		{	
			for(j=qishi;j<=jieshu;)
			{
				for(i=1;i<=acc;)
				{	
					for(k=1;k<=jikou;k++)
					{ 
						
							printf("Interface EtherNet 1/0/%d\n",i);
							printf("port link-type access\n");
							printf("port access vlan %d\n",j);
							i++;
						
					}
				j++;
				}
			}
		}
	else
		printf("您输入的参数有误\n");
		goto loop;
	return 0;
}
